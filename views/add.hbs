<h1>Add new course</h1>

<form action="/add" method="POST">
  <div class="row">
    <div class="input-field">
      <input name="title" id="title" type="text" class="validate" required>
      <label for="title">Название курса</label>
      <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
      <input name="price" id="price" type="number" class="validate" required min="1">
      <label for="price">Цена</label>
      <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
      <input name="img" id="img" type="text" class="validate" required>
      <label for="img">Image url</label>
      <span class="helper-text" data-error="Введите url"></span>
    </div>
    
    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <button class="btn btn-primary">Добавить курс</button>
  </div>
</form>